{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],

    /* Type Safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Build */
    "sourceMap": false,
    "declaration": false,

    /* Module behavior */
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
